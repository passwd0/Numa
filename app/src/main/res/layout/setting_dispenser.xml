<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_status"
        android:textSize="@dimen/titles_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_title"
        app:srcCompat="@drawable/a36" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/settings_on"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/state_title" />

    <SeekBar
        android:id="@+id/lightness_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:thumbTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <SeekBar
        android:id="@+id/sound_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:thumbTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/luminosity" />

    <TextView
        android:id="@+id/duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_duration_title"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound" />

    <TextView
        android:id="@+id/duration_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_numadispenser_duration_details"
        android:textSize="@dimen/details_size"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration_title" />

    <Spinner
        android:id="@+id/duration_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/alarm"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/settings_durations_minutes"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/duration_detail" />

    <TextView
        android:id="@+id/notify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_numadispenser_notification_title"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration_spinner" />

    <TextView
        android:id="@+id/notify_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_numadispenser_notification_details"
        android:textSize="@dimen/details_size"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_title" />

    <Spinner
        android:id="@+id/notification_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/alarm"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/settings_durations_minutes"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/notify_detail" />


    <TextView
        android:id="@+id/luminosity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_light"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_sound"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luminosity" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="133dp" />

    <TextView
        android:id="@+id/container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/block_size"
        android:text="@string/settings_numadispenser_mapcontainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_spinner" />

    <GridLayout
        android:id="@+id/container_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/container_title">

        <ImageView
            android:id="@+id/iv_container1"
            android:layout_column="0"
            style="@style/container"
            android:layout_row="0"
            app:srcCompat="@drawable/a14" />

        <TextView
            android:id="@+id/tv_medicine_name1"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container2"
            style="@style/container"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/a15" />

        <TextView
            android:id="@+id/tv_medicine_name2"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container3"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a16" />

        <TextView
            android:id="@+id/tv_medicine_name3"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container4"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a17" />

        <TextView
            android:id="@+id/tv_medicine_name4"
            android:layout_row="3"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container5"
            android:layout_row="4"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a18" />

        <TextView
            android:id="@+id/tv_medicine_name5"
            android:layout_row="4"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container6"
            android:layout_row="5"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a19" />

        <TextView
            android:id="@+id/tv_medicine_name6"
            android:layout_row="5"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container7"
            android:layout_row="6"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a20" />

        <TextView
            android:id="@+id/tv_medicine_name7"
            android:layout_row="6"
            android:layout_column="1"
            style="@style/mapContainerTextView" />

        <ImageView
            android:id="@+id/iv_container8"
            android:layout_row="7"
            android:layout_column="0"
            style="@style/container"
            app:srcCompat="@drawable/a21" />

        <TextView
            android:id="@+id/tv_medicine_name8"
            android:layout_row="7"
            android:layout_column="1"
            style="@style/mapContainerTextView" />
    </GridLayout>

    <ImageButton
        android:id="@+id/finish"
        style="@style/addButton"
        android:src="@drawable/a35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_list"/>

</android.support.constraint.ConstraintLayout>